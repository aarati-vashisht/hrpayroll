<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorgrey">

    <RelativeLayout
        android:id="@+id/rl_reqhomehead"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">

        <com.yoeki.kalpnay.hrporatal.setting.TextclassTextFrHeader
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="My Task"
            android:textSize="@dimen/textFrHeading"
            android:textColor="@color/textcolor"/>

        <FrameLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="05dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/benefits_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

            <ImageView android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="04dp"
                android:scaleType="fitXY"
                android:background="@mipmap/back"
                android:layout_gravity="left|center"/>

        </FrameLayout>
    </RelativeLayout>

    <!--<com.yoeki.kalpnay.hrporatal.setting.TextclassTextFrHeader-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:gravity="center"-->
        <!--android:text="Good Morning"-->
        <!--android:padding="10dp"-->
        <!--android:textSize="@dimen/textFrHeading"-->
        <!--android:background="@color/colorPrimary"-->
        <!--android:textColor="@color/textcolor"/>-->

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popupbackground"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                    android:id="@+id/all_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/all_task_icon"
                    android:gravity="left|center"
                    android:drawablePadding="10dp"
                    android:paddingRight="10dp"
                    android:text="All tasks"
                    android:textColor="#000"
                    android:textSize="@dimen/textFrHeader"/>

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="20"
                    android:textSize="@dimen/textNtHeader"
                    android:textColor="#000"/>

            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                    android:id="@+id/myTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/my_task_icon"
                    android:gravity="left|center"
                    android:drawablePadding="10dp"
                    android:paddingRight="10dp"
                    android:text="My tasks"
                    android:textColor="#000"
                    android:textSize="@dimen/textFrHeader"/>

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="25"
                    android:textSize="@dimen/textNtHeader"
                    android:textColor="#000"/>

            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                    android:id="@+id/today_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/todays_task_icon"
                    android:gravity="left|center"
                    android:drawablePadding="10dp"
                    android:paddingRight="10dp"
                    android:text="Today's tasks"
                    android:textColor="#000"
                    android:textSize="@dimen/textFrHeader"/>

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="32"
                    android:textSize="@dimen/textNtHeader"
                    android:textColor="#000"/>

            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                    android:id="@+id/benefit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/overdues_icon"
                    android:gravity="left|center"
                    android:drawablePadding="10dp"
                    android:paddingRight="10dp"
                    android:text="Overdue tasks"
                    android:textColor="#000"
                    android:textSize="@dimen/textFrHeader"/>

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="6"
                    android:textSize="@dimen/textNtHeader"
                    android:textColor="#000"/>

            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                    android:id="@+id/totalOverdue_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/today_overdues_icon"
                    android:gravity="left|center"
                    android:drawablePadding="10dp"
                    android:paddingRight="10dp"
                    android:text="Today + Overdue tasks"
                    android:textColor="#000"
                    android:textSize="@dimen/textFrHeader"/>

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:text="38"
                    android:textSize="@dimen/textNtHeader"
                    android:textColor="#000"/>

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>