<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">
    <android.support.v7.widget.CardView
        android:id="@+id/crd_searchemploye"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/textcolor"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="10dp"
        android:layout_margin="1dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_mainmenuitemimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_margin="7dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#0188cc"
        android:src="@drawable/profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
         <com.yoeki.kalpnay.hrporatal.setting.Textclass
            android:id="@+id/tv_searchemployename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_marginLeft="7dp"
            android:paddingLeft="5dp"
            android:paddingTop="7dp"
            android:textColor="@color/colorblack"
            android:textSize="15dp"/>

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/tv_searchemployeemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="designation"
                android:paddingLeft="5dp"
                android:layout_marginLeft="7dp"
                android:paddingBottom="7dp"
                android:textColor="@color/colorlightblack"
                android:textSize="13dp"/>

          <com.yoeki.kalpnay.hrporatal.setting.Textclass
            android:id="@+id/tv_searchemployedesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="designation"
            android:paddingLeft="5dp"
            android:layout_marginLeft="7dp"
            android:paddingBottom="7dp"
            android:textColor="@color/colorlightblack"
            android:textSize="13dp"/>
        </LinearLayout>
     </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>