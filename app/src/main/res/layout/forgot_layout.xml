<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogbackground"
    android:alpha=".8">
    <com.yoeki.kalpnay.hrporatal.setting.Textclass
        android:id="@+id/forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot"
        android:orientation="vertical">

        <com.yoeki.kalpnay.hrporatal.setting.Textclass
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your user name below to recieve a password reset link"
            android:textColor="@color/colorblack"
            android:gravity="center"
            android:textSize="12dp"
            android:layout_margin="15dp"/>
        <com.yoeki.kalpnay.hrporatal.setting.Edittextclass
            android:id="@+id/edt_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="User Name"
            android:textColorHint="@color/colorgreydark"
            android:padding="10dp"
            android:textSize="12dp"
            android:textColor="@color/colorblack"
            android:background="@drawable/edity_textbackground"/>
        <com.yoeki.kalpnay.hrporatal.setting.Textclass
            android:id="@+id/tv_submitforgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/textcolor"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/textbackgroundsolid"
            android:padding="10dp"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="25dp" />
    </LinearLayout>
</RelativeLayout>