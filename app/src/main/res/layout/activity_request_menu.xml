<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Request.RequestMenu"
    android:orientation="vertical"
    android:background="@color/colorAccent">
    <RelativeLayout
        android:id="@+id/rl_reqhomehead"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <com.yoeki.kalpnay.hrporatal.setting.TextclassTextFrHeader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Request"
            android:textSize="@dimen/textFrHeading"
            android:textColor="@color/textcolor"/>

        <FrameLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="05dp">

            <Button
                android:id="@+id/img_backrequest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

            <ImageView android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="04dp"
                android:scaleType="fitXY"
                android:background="@mipmap/back"
                android:layout_gravity="left|center"/>

        </FrameLayout>

    </RelativeLayout>
    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_reqhomehead">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/rl_reqhomehead"
            android:layout_centerInParent="true"
            android:background="@color/colorgrey">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/textcolor"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="10dp"
                    android:layout_weight=".5"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:id="@+id/ly_leaverequest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="18dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img_mainmenuitemimage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/leave_request_icon"/>
                        <com.yoeki.kalpnay.hrporatal.setting.Textclass
                            android:id="@+id/tv_mainmenuitemname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Leave Request"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/textcolor"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="10dp"
                    android:layout_weight=".5"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:id="@+id/ly_claimreq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="18dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/claim_icon"/>
                        <com.yoeki.kalpnay.hrporatal.setting.Textclass
                            android:id="@+id/tv_claimreq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Claim"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/textcolor"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="10dp"
                    android:layout_weight=".5"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:id="@+id/ly_trainningrequest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="18dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/training_icon"/>
                        <com.yoeki.kalpnay.hrporatal.setting.Textclass
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Course/Training"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/textcolor"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="10dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:id="@+id/ly_advance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="18dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/advance_icon"/>
                        <com.yoeki.kalpnay.hrporatal.setting.Textclass
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Advance"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/textcolor"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="10dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:id="@+id/ly_shiftchange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="18dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/shift_icon"/>
                        <com.yoeki.kalpnay.hrporatal.setting.Textclass
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Shift Change"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/textcolor"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="10dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:id="@+id/ly_greveance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="18dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/grievance_icon"/>
                        <com.yoeki.kalpnay.hrporatal.setting.Textclass
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Grievance"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/textcolor"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="10dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="18dp"
                        android:orientation="vertical">
                          <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:src="@drawable/benefits_icon_lg"/>
                          <com.yoeki.kalpnay.hrporatal.setting.Textclass
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Benefits"/>
                       </LinearLayout>
                   </android.support.v7.widget.CardView>
                 <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/colorgrey"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="10dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:alpha=".8"
                    android:layout_margin="10dp">
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    <!--</ScrollView>-->
</RelativeLayout>