<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialogbackground">

    <com.yoeki.kalpnay.hrporatal.setting.Textclass
        android:id="@+id/forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request"
        android:textSize="20dp"
        android:padding="15dp"
        android:textColor="@color/textcolor"
        android:background="@color/themcolor"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/ly_formdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@+id/view_plansubmitform"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:layout_weight=".5"
                android:text="Employee Name"/>

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/tv_empname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/colorlightblack"
                android:textSize="15dp"
                android:layout_weight=".5"
                android:text="Mohit Kumar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:layout_weight=".5"
                android:text="Where"/>

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/tv_empwhere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/colorlightblack"
                android:textSize="15dp"
                android:layout_weight=".5"
                android:text="Company Location"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:layout_weight=".5"
                android:text="Location"/>

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/tv_emplocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/colorlightblack"
                android:textSize="15dp"
                android:layout_weight=".5"
                android:text="E-210, Sec-63 Noida"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:layout_weight=".5"
                android:text="Purpose"/>

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/tv_emppurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/colorlightblack"
                android:textSize="15dp"
                android:layout_weight=".5"
                android:text="Visit Company for Meeting to Director"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_formdata"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_approved"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/themcolor"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight=".5">
                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_approved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Approved"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/textcolor"
                    android:gravity="center"
                    android:textSize="15dp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_changerequest"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/themcolor"
                card_view:cardCornerRadius="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                card_view:cardElevation="10dp"
                android:layout_weight=".5">

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_changerequstmsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Request"
                    android:textColor="@color/textcolor"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="15dp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>