<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edity_textbackground"
    android:orientation="vertical"
    android:layout_margin="6dp"
    tools:context=".Request.Leave.LeaveRequest">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="Date"
                    android:layout_weight=".5"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/textFrHeader" />

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="Date"
                    android:layout_weight=".5"
                    android:textColor="@color/colorgreydark"
                    android:textSize="@dimen/textFrHeader" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:layout_weight=".5"
                    android:text="Current Shift"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/textFrHeader" />

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_currentshift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="Date"
                    android:layout_weight=".5"
                    android:textColor="@color/colorgreydark"
                    android:textSize="@dimen/textFrHeader" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:layout_weight=".5"
                    android:text="Change To"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/textFrHeader" />

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_changeshift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="Date"
                    android:layout_weight=".5"
                    android:textColor="@color/colorgreydark"
                    android:textSize="@dimen/textFrHeader" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                    android:id="@+id/tv_shiftchangereasone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:layout_weight=".5"
                    android:text="Status"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/textFrHeader" />

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="Date"
                    android:layout_weight=".5"
                    android:textColor="@color/colorgreydark"
                    android:textSize="@dimen/textFrHeader" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>