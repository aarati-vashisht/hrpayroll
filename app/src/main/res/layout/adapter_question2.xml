<?xml version="1.0" encoding="utf-8"?>
 <android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textcolor"
    tools:context=".Survey.ServayHomeActivity">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/card_serveyevent"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/textcolor"
            card_view:cardCornerRadius="2dp"
            android:layout_marginBottom="7dp"
            card_view:cardElevation="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">
                    <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                        android:id="@+id/tv_question2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event"
                        android:textColor="@color/colorblack"
                        android:paddingRight="8dp"
                        android:textSize="16dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="10dp"
                        android:gravity="left" />
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="4dp"
                       android:layout_marginBottom="4dp"
                       android:orientation="horizontal">
                       <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                           android:id="@+id/tv_unreadquestion2count"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="3"
                           android:textColor="@color/textcolor"
                           android:textSize="13dp"
                           android:gravity="center"
                           android:background="@drawable/circulartext"/>
                    <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                        android:id="@+id/tv_unreadquestion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event"
                        android:textColor="@color/colorlightblack"
                        android:textSize="13dp"
                        android:layout_marginLeft="7dp"
                        android:paddingBottom="5dp"
                        android:gravity="left" />
                   </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.constraint.ConstraintLayout>