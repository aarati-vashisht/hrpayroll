<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorgrey"
    android:orientation="vertical"
    tools:context=".Request.Leave.LeaveRequest">
    <RelativeLayout
        android:id="@+id/rl_reqhomehead"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">
        <com.yoeki.kalpnay.hrporatal.setting.TextclassTextFrHeader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Grievance"
            android:textSize="@dimen/textFrHeading"
            android:textColor="@color/textcolor"/>

        <FrameLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="05dp">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/img_backrequestgreveance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

            <ImageView android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="04dp"
                android:scaleType="fitXY"
                android:background="@mipmap/back"
                android:layout_gravity="left|center"/>
        </FrameLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                android:textSize="@dimen/textFrHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/colorblack"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/tv_greveancedate"
                android:textSize="@dimen/textNtHeader"
                android:hint="Date"
                android:textColorHint="@color/colorgreydark"
                android:textColor="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edity_textbackground"/>

            <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                android:textSize="@dimen/textFrHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/colorblack"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:textSize="@dimen/textNtHeader"
                android:hint="Time"
                android:textColorHint="@color/colorgreydark"
                android:textColor="@color/colorText"
                android:id="@+id/tv_grievancetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edity_textbackground"/>

            <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                android:textSize="@dimen/textFrHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manager Name"
                android:textColor="@color/colorblack"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

            <com.yoeki.kalpnay.hrporatal.setting.Edittextclass
                android:id="@+id/edt_greveancemanagername"
                android:textSize="@dimen/textNtHeader"
                android:hint="Manager Name"
                android:textColorHint="@color/colorgreydark"
                android:textColor="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edity_textbackground"/>

            <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                android:textSize="@dimen/textFrHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grievance Type"
                android:textColor="@color/colorblack"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:textSize="@dimen/textNtHeader"
                android:textColorHint="@color/colorgreydark"
                android:textColor="@color/colorText"
                android:id="@+id/tv_grievancetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edity_textbackground"/>

            <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                android:textSize="@dimen/textFrHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of person involved"
                android:textColor="@color/colorblack"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

            <com.yoeki.kalpnay.hrporatal.setting.Textclass
                android:id="@+id/edt_greveancepersonname"
                android:textSize="@dimen/textNtHeader"
                android:hint="Name of person involved"
                android:textColorHint="@color/colorgreydark"
                android:textColor="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edity_textbackground"/>

            <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:text="Incident Description"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/textFrHeader" />

            <com.yoeki.kalpnay.hrporatal.setting.Edittextclass
                android:id="@+id/edt_greveancepolicy"
                android:textSize="@dimen/textNtHeader"
                android:textColorHint="@color/colorgreydark"
                android:textColor="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="left"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edity_textbackground"/>

           <!-- <com.yoeki.kalpnay.hrporatal.setting.TextclassfrHeading
                android:textSize="@dimen/textFrHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proper Solution"
                android:textColor="@color/colorblack"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

            <com.yoeki.kalpnay.hrporatal.setting.Edittextclass
                android:id="@+id/edt_greveancesolution"
                android:textSize="@dimen/textNtHeader"
                android:hint="Proper Solution"
                android:textColorHint="@color/colorgreydark"
                android:textColor="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="left"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/edity_textbackground"/>-->
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-46dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_greveancesubmit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbackgroundsolid"
            android:textAlignment="center"
            android:text="Submit"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="3dp"
            android:typeface="serif"
            android:textSize="@dimen/textFrSubmitButton"
            android:layout_weight="1"
            android:textColor="#fff"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_grievancesave"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/textbackgroundsolid"
                android:textAlignment="center"
                android:text="Save"
                android:layout_marginLeft="3dp"
                android:typeface="serif"
                android:layout_marginRight="3dp"
                android:textSize="@dimen/textFrSubmitButton"
                android:layout_weight="1"
                android:textColor="#fff"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_grievanceresolve"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/textbackgroundsolid"
                android:textAlignment="center"
                android:text="Close"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="7dp"
                android:typeface="serif"
                android:textSize="@dimen/textFrSubmitButton"
                android:visibility="gone"
                android:layout_weight="1"
                android:textColor="#fff"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>