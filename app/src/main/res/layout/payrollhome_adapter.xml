<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">
    <android.support.v7.widget.CardView
        android:id="@+id/salay_card"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/textcolor"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="10dp"
        android:layout_margin="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <com.yoeki.kalpnay.hrporatal.setting.Textclass
            android:id="@+id/tv_sallerymonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Month"
            android:textSize="17dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="7dp"
            android:textColor="@color/colorblack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Month"
                    android:textSize="16dp"
                    android:textColor="@color/colorlightblack"
                    android:layout_weight=".5"
                    android:layout_marginLeft="8dp"
                    android:gravity="left"/>

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_sallerymonthdetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Month"
                    android:textSize="16dp"
                    android:textColor="@color/colorlightblack"
                    android:layout_weight=".5"
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Amount"
                    android:textSize="16dp"
                    android:textColor="@color/colorlightblack"
                    android:layout_weight=".5"
                    android:layout_marginLeft="8dp"
                    android:gravity="left"/>

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_salleryamount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="32232"
                    android:textSize="16dp"
                    android:textColor="@color/colorlightblack"
                    android:layout_weight=".5"
                    android:gravity="left"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>