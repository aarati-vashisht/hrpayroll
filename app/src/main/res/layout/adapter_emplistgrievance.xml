<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">
    <android.support.v7.widget.CardView
        android:id="@+id/crd_empgrievlist"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/textcolor"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="10dp"
        android:layout_margin="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_empgrievtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grievance Type"
                    android:layout_marginLeft="7dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="7dp"
                    android:textColor="@color/colorblack"
                    android:textSize="15dp"/>
                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_empgrievdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="7dp"
                    android:paddingBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorlightblack"
                    android:textSize="13dp"/>
                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_empgrievstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="7dp"
                    android:paddingBottom="7dp"
                    android:textColor="@color/colorlightblack"
                    android:textSize="13dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>