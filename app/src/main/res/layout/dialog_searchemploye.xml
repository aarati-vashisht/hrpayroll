<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogbackground">

    <com.yoeki.kalpnay.hrporatal.setting.Textclass
        android:id="@+id/forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search For"
        android:textColor="@color/colorPrimary"
        android:gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot"
        android:orientation="vertical">

        <com.yoeki.kalpnay.hrporatal.setting.Edittextclass
            android:id="@+id/edt_searchbyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search by name"
            android:textColorHint="@color/colorlightblack"
            android:textColor="@color/colorblack"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_margin="15dp"
            android:background="@drawable/edity_textbackground"/>

        <com.yoeki.kalpnay.hrporatal.setting.Textclass
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <com.yoeki.kalpnay.hrporatal.setting.Edittextclass
            android:id="@+id/edt_searchbydesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search by Designation"
            android:textColorHint="@color/colorlightblack"
            android:textColor="@color/colorblack"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_margin="15dp"
            android:background="@drawable/edity_textbackground"/>
        <com.yoeki.kalpnay.hrporatal.setting.Textclass
            android:id="@+id/tv_submitsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/textcolor"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/textbackgroundsolid"
            android:padding="10dp"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="25dp" />
    </LinearLayout>
</RelativeLayout>