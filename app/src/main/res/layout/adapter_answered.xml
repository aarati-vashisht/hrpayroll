<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView
        android:id="@+id/card_answered"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/textcolor"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="10dp"
        android:layout_margin="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_answered"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_margin="7dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#0188cc"
                android:src="@drawable/profile"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_answeredname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:layout_marginLeft="7dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="7dp"
                    android:textColor="@color/colorblack"
                    android:textSize="16dp"/>

                <com.yoeki.kalpnay.hrporatal.setting.Textclass
                    android:id="@+id/tv_answereddate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="designation"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="7dp"
                    android:paddingBottom="7dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorlightblack"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>